<div class='track--modal'>/BETA Click on the background to close</div>
<div class='main--wrapper'>
  <section class='filters-wrapper'>
    <div class='switch-container'>
      <h4>Downloadable</h4>
      <div class="onoffswitch">
        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="downloadable">
        <label class="onoffswitch-label" for="downloadable">
        <span class="onoffswitch-inner"></span>
        <span class="onoffswitch-switch"></span>
        </label>
      </div>
    </div>
    <div class='switch-container'>
      <h4>Less Viewed</h4>
      <div class="onoffswitch">
        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="asc_views">
        <label class="onoffswitch-label" for="asc_views">
        <span class="onoffswitch-inner"></span>
        <span class="onoffswitch-switch"></span>
        </label>
      </div>
    </div>
    <div class='switch-container'>
      <h4>Most Viewed</h4>
      <div class="onoffswitch">
        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="desc_views">
        <label class="onoffswitch-label" for="desc_views">
        <span class="onoffswitch-inner"></span>
        <span class="onoffswitch-switch"></span>
        </label>
      </div>
    </div>
    <div class='switch-container'>
      <h4>Less Likes</h4>
      <div class="onoffswitch">
        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="asc_likes">
        <label class="onoffswitch-label" for="asc_likes">
        <span class="onoffswitch-inner"></span>
        <span class="onoffswitch-switch"></span>
        </label>
      </div>
    </div>
    <div class='switch-container'>
      <h4>Most Liked</h4>
      <div class="onoffswitch">
        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="desc_likes">
        <label class="onoffswitch-label" for="desc_likes">
        <span class="onoffswitch-inner"></span>
        <span class="onoffswitch-switch"></span>
        </label>
      </div>
    </div>
  </section>
  <section id='tracks-wrapper' class='playlist-wrapper'>
    <div id='tracks'></div>
    <div id='paginator'></div>
  </section>
</div>
<script src="https://w.soundcloud.com/player/api.js" type="text/javascript"></script>
